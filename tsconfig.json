{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "allowJs": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // mocha
    "noUnusedParameters": false,
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "include": [
    "./src/server.ts",
    "./src/**/*",
    "./test/**/*"
  ]
}
